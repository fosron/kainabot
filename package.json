{
  "name": "kainabot-app",
  "version": "1.0.0",
  "description": "A menubar app to track product prices.",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.yourcompany.kainabot",
    "productName": "KainaBot",
    "files": [
      "**/*",
      "!main.py",
      "!prices.json",
      "!README.md",
      "!package-lock.json",
      "!node_modules",
      "!dist",
      "!build"
    ],
    "extraResources": [
      {
        "from": "python/dist/main",
        "to": "app/python/main",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "python/dist/main.exe",
        "to": "app/python/main.exe",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    
    "electron-store": "^10.0.0",
    "menubar": "^9.4.0",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-reload": "^2.0.0-alpha.1",
    "prettier": "3.6.2"
  }
}
